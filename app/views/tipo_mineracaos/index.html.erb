<h1>Tipos de Minerações</h1>

<table class="ui red table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Sigla</th>
      <th></th>
      <th>Ações</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_mineracaos.each do |tipo_mineracao| %>
      <tr>
        <td><%= tipo_mineracao.nome %></td>
        <td><%= tipo_mineracao.sigla %></td>
        <td><%= link_to 'Visualizar', tipo_mineracao, class:"mini ui secondary button" %></td>
        <td><%= link_to 'Editar', edit_tipo_mineracao_path(tipo_mineracao), class:"mini ui secondary button" %></td>
        <td><%= link_to 'Deletar', tipo_mineracao, method: :delete, data: { confirm: 'Tem certeza?' }, class:"mini ui red button"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Tipo Mineracao', new_tipo_mineracao_path, class:"ui secondary button" %>

<center><%= will_paginate @tipo_mineracaos, class:"ui inverted red button" %></center>
